{
  "info": {
    "name": "FHIR Patient Portal API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection for exercising the FHIR Patient Portal backend."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (JWT Obtain)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/login/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "login",
                ""
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin@example.com\",\n  \"password\": \"ChangeMe123!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  pm.environment.set('ACCESS_TOKEN', json.access);",
                  "  pm.environment.set('REFRESH_TOKEN', json.refresh);",
                  "}",
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/refresh/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "refresh",
                ""
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{REFRESH_TOKEN}}\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "  const json = pm.response.json();",
                  "  pm.environment.set('ACCESS_TOKEN', json.access);",
                  "}",
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/api/auth/me/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "auth",
                "me",
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) {",
                  "  pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token });",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "List Roles",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/admin/roles/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "v1",
                "admin",
                "roles",
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) { pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token }); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Assign Role To User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/admin/users/assign-role/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "admin",
                "users",
                "assign-role",
                ""
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"user_id\": 1,\n  \"roles\": [\"MANAGER\"],\n  \"reason\": \"Grant elevated access\"\n}"
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) { pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token }); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Patients",
      "item": [
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{BASE_URL}}/api/v1/patients/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "v1",
                "patients",
                ""
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resource_id\": \"patient-uuid-123\",\n  \"primary_identifier\": \"MRN12345\",\n  \"identifiers\": [{\"value\": \"MRN12345\"}],\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"gender\": \"male\",\n  \"birth_date\": \"1980-01-15\"\n}"
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) { pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token }); }"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created', function () { pm.response.to.have.status(201); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "List Patients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/patients/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "v1",
                "patients",
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) { pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token }); }"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('List returns 200', function () { pm.response.to.have.status(200); });",
                  "pm.test('Body is array', function () { pm.expect(pm.response.json()).to.be.an('array'); });"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Search Patients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/patients/search?identifier=MRN12345",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "v1",
                "patients",
                "search"
              ],
              "query": [
                {
                  "key": "identifier",
                  "value": "MRN12345"
                }
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) { pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token }); }"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Delete Patient (Expect 403)",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{BASE_URL}}/api/v1/patients/{{PATIENT_ID}}/",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "api",
                "v1",
                "patients",
                "{{PATIENT_ID}}",
                ""
              ]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const token = pm.environment.get('ACCESS_TOKEN');",
                  "if (token) { pm.request.headers.add({ key: 'Authorization', value: 'Bearer ' + token }); }"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Forbidden', function () { pm.response.to.have.status(403); });"
                ]
              }
            }
          ]
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:8000"
    },
    {
      "key": "ACCESS_TOKEN",
      "value": ""
    },
    {
      "key": "REFRESH_TOKEN",
      "value": ""
    },
    {
      "key": "PATIENT_ID",
      "value": "patient-uuid-123"
    }
  ]
}